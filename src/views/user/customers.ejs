<%- include('page_header', {title:'Menu Food'}) -%>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <!-- Các thư viện và CSS bootrap cần thiết -->
        <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="../../public/user/css/customers.css">
    </head>

    <body>
        <div class="container-xxl py-5">
            <!-- Nút hiển thị popup -->
            <button id="openPopup">Nhập Thông Tin</button>

            <!-- Popup -->
            <div class="popup-overlay" id="popup">
                <div class="popup-content">
                    <span class="close-popup" id="closePopup">&times;</span>
                    <h2>Đăng ký thông tin</h2>
                    <form id="infoForm">
                        <label for="name">Họ và tên:</label>
                        <input type="text" id="name" placeholder="Nhập họ và tên" required>

                        <label for="phone">Số điện thoại:</label>
                        <input type="tel" id="phone" placeholder="Nhập số điện thoại" required>

                        <label for="email">Email:</label>
                        <input type="email" id="email" placeholder="Nhập email" required>

                        <label for="identity">CMND/CCCD:</label>
                        <input type="text" id="identity" placeholder="Nhập số CMND/CCCD" required>

                        <div class="half-width">
                            <label>Giới tính:</label>
                            <label><input type="radio" name="gender" value="M" required checked> Nam</label>
                            <label><input type="radio" name="gender" value="F" required> Nữ</label>
                        </div>

                        <label for="area">Chọn thành phố:</label>
                        <select id="area" required>
                            <option value="" disabled selected>-- Chọn thành phố --</option>
                        </select>

                        <label for="branch">Chọn chi nhánh:</label>
                        <select id="branch" required>
                            <option value="" disabled selected>-- Chọn chi nhánh --</option>
                        </select>

                        <label for="table">Chọn bàn:</label>
                        <select id="table" required>
                            <option value="" disabled selected>-- Chọn bàn --</option>
                        </select>

                        <label for="table">Số người:</label>
                        <input type="number" id="table" placeholder="Nhập số người" required>

                        <label for="datetime">Chọn thời gian:</label>
                        <input type="datetime-local" id="datetime" required>
                        
                        <div class="half-width">
                            <button type="submit" class="submit-btn">Gửi</button>
                            <button type="button" class="cancel-btn" id="cancelPopup">Hủy</button>
                        </div>
                    </form>
                </div>
        </div>
        <div class="container">
            <div class="row g-0 gx-3 align-items-center mb-4">
                <!-- Branch Filter -->
                <div class="col-md-2">
                    <label for="branchsearch" class="form-label text-white">Branch</label>
                    <select id="branchsearch" class="form-select">
                        <option value="" disabled selected>-- Chọn chi nhánh --</option>
                    </select>
                </div>
                <!-- Category Filter -->
                <div class="col-md-2">
                    <label for="category" class="form-label text-white">Category</label>
                    <select id="category" class="form-select">
                        <option value="" disabled selected>-- Chọn loại món ăn --</option>
                    </select>
                </div>
                <!-- Price Filter -->
                <div class="col-md-2">
                    <label for="price-max" class="form-label text-white">Price ($)</label>
                    <input type="number" id="price-max" class="form-control" placeholder="Max Price" min="0"
                        value="<%= filters.price || '' %>">
                </div>
                <!-- Filter Button -->
                <div class="col-md-2">
                    <button class="btn btn-primary mt-4" id="filter-btn">Filter</button>
                </div>
                <!-- Search Box -->
                <div class="row g-0 gx-3 align-items-center mb-4">
                    <div class="col-md-8">
                        <input type="text" id="search-box" class="form-control mt-4" placeholder="Search foods..."
                            value="<%= filters.search || '' %>">
                    </div>
                    <div class="col-md-2 d-flex">
                        <button class="btn btn-success w-100 mt-4" id="search-btn">Search</button>
            </div>

        </div>
        <div class="container py-5">

            <div class="row">

                <% if (foods.length> 0) { %>
                    <% foods.forEach(food=> { %>
                        <!-- Mỗi món ăn là một cột -->
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                <!-- Hình ảnh món ăn -->
                                <img src="../../public/user/images/<%= food.item_name %>.jpg" class="card-img-top"
                                    alt="<%= food.item_name %>">
                                <div class="card-body">
                                    <!-- Tên món ăn -->
                                    <h5 class="card-title text-center">
                                        <%= food.item_name %>
                                    </h5>
                                    <!-- Giá món ăn -->
                                    <p class="card-text text-center text-success fw-bold">
                                        <%= food.price.toLocaleString() %>₫
                                    </p>
                                </div>
                                <div class="card-footer text-center">
                                    <!-- Nút thêm vào giỏ hàng -->
                                    <button class="btn btn-primary add-to-cart" data-id="<%= food.item_id %>"
                                        data-name="<%= food.item_name %>" data-price="<%= food.price %>"
                                        data-image="../../public/user/images/<%= food.item_name %>.jpg">
                                        Chọn món
                                    </button>
                                </div>
                            </div>

                        </div>
                        <% }); %>
                            <% } else { %>
                                <!-- Hiển thị khi không có món ăn nào -->
                                <p class="text-center">Không có món ăn nào phù hợp với tiêu chí tìm kiếm.</p>
                                <% } %>

            </div>
        </div>
            </div>
        <!-- Đặt một phần tử toast để hiển thị thông báo -->
        <div id="toast" class="toast"></div>


        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
        <script src="../../public/user/js/customers.js"></script>
        <script src="../../public/user/js/cart.js"></script>
    </body>

    </html>