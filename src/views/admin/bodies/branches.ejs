<h2>Branch Management</h2>
<input type="text" class="search-bar" placeholder="Search branches..." oninput="filterBranches()">
<div id="branch-list">
    <h3>Branch List</h3>
    <table>
        <thead>
        <tr>
            <th style="width: 20%; text-align: center;">Branch Name</th>
            <th style="width: 20%; text-align: center;">Address</th>
            <th style="width: 5%; text-align: center;">Area ID</th>
            <th style="width: 5%; text-align: center;">Manager Name</th>
            <th style="width: 5%; text-align: center;">Opening Time</th>
            <th style="width: 5%; text-align: center;">Closing Time</th>
            <th style="width: 5%; text-align: center;">Status</th>
            <th class="motorbike-parking" style="width: 5%; text-align: center;">Motorbike Parking</th>
            <th class="car-parking" style="width: 5%; text-align: center;">Car Parking</th>
            <th style="width: 30%; text-align: center;">Actions</th>
        </tr>
        </thead>
        <tbody id="branchTableBody">
            <% branches.forEach(branch => { %>
                <tr>
                    <td><%= branch.branch_name %></td>
                    <td><%= branch.address %></td>
                    <td><%= branch.area_id %></td>
                    <td><%= branch.manager_name %></td>
                    <td><%= branch.opening_time %></td>
                    <td><%= branch.closing_time %></td>
                    <td><%= branch.status %></td>
                    <td><%= branch.has_motorbike_parking ? 'Yes' : 'No' %></td>
                    <td><%= branch.has_car_parking ? 'Yes' : 'No' %></td>
                    <td>
                        <a href="/admin/branches/edit/<%= branch.branch_id %>" class="edit">Edit</a>
                        <a href="/admin/branches/delete/<%= branch.branch_id %>" class="delete" onclick="return confirm('Are you sure you want to delete this branch?');">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <div id="branchPagination" class="pagination"></div>
    <button class="btn-primary" onclick="showBranchForm()">Add Branch</button>
</div>
<div id="branch-form" style="display: none;" >
    <h3>Branch Details</h3>
    <form action="/admin/branches/add" method="POST">
        <div class="form-group">
            <label for="branch_name">Branch Name</label>
            <input type="text" id="branch_name" name="branch_name" required>
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" id="address" name="address" required>
        </div>
        <div class="form-group">
            <label for="opening_time">Opening Time (HH:MM:SS)</label>
            <input type="text" id="opening_time" name="opening_time" placeholder="HH:MM:SS" required pattern="([01]?[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]">
        </div>
        <div class="form-group">
            <label for="closing_time">Closing Time (HH:MM:SS)</label>
            <input type="text" id="closing_time" name="closing_time" placeholder="HH:MM:SS" required pattern="([01]?[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]">
        </div>
        <div class="form-group">
            <label for="status">Status</label>
            <select id="status" name="status" required>
                <option value="open">Open</option>
                <option value="closed">Closed</option>
            </select>
        </div>
        <div class="form-group">
            <label for="phone_number">Phone Number</label>
            <input type="text" id="phone_number" name="phone_number" required>
        </div>
        <div class="form-group">
            <label for="has_motorbike_parking">Has Motorbike Parking?</label>
            <select id="has_motorbike_parking" name="has_motorbike_parking" required>
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>
        </div>
        <div class="form-group">
            <label for="has_car_parking">Has Car Parking?</label>
            <select id="has_car_parking" name="has_car_parking" required>
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>
        </div>
        <div class="form-group">
            <label for="area_id">Area</label>
            <select id="area_id" name="area_id" required>
                <% areas.forEach(area => { %>
                    <option value="<%= area.area_id %>"><%= area.area_name %></option>
                <% }); %>
            </select>
        </div>
        <div class="form-group">
            <label for="manager">Manager</label>
            <select id="manager" name="manager" required>
                <% managers.forEach(manager => { %>
                    <option value="<%= manager.employee_id %>"><%= manager.name %></option>
                <% }); %>
            </select>
        </div>
        
        <button type="submit">Save</button>
    </form>
</div>
<script>
function showBranchForm() {
    const branchForm = document.getElementById("branch-form");
    const addButton = document.querySelector(".btn-primary");

    if (branchForm.style.display === "none" || branchForm.style.display === "") {
        branchForm.style.display = "block";
        addButton.textContent = "Close Form";
    } else {
        branchForm.style.display = "none";
        addButton.textContent = "Add Branch";
    }
}
function filterBranches() {
    const searchTerm = document.querySelector('.search-bar').value.toLowerCase();
    const rows = document.querySelectorAll('#branchTableBody tr');

    rows.forEach(row => {
        const branchName = row.querySelector('td:nth-child(2)').textContent.toLowerCase(); // Lấy tên chi nhánh
        if (branchName.includes(searchTerm)) {
            row.style.display = ''; // Hiển thị dòng nếu tên chi nhánh chứa từ khóa tìm kiếm
        } else {
            row.style.display = 'none'; // Ẩn dòng nếu tên chi nhánh không chứa từ khóa
        }
    });
}


</script>
